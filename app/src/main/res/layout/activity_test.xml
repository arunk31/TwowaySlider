<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="in.arunkrishnamurthy.twowayslider.TestActivity">

    <in.arunkrishnamurthy.twowayslider.TwowaySliderView
        android:id="@+id/sliderControlCustom"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/sliderControl"
        android:layout_centerInParent="true" />

    <in.arunkrishnamurthy.twowayslider.TwowaySliderView
        android:id="@+id/sliderControl"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:cancelOnYExit="true"
        app:sliderBackgroundColor="@android:color/holo_orange_light"
        app:sliderColor="@android:color/holo_red_light"
        app:sliderImage="@mipmap/ic_launcher"
        app:leftImage="@mipmap/ic_launcher"
        app:rightImage="@mipmap/ic_launcher"
        app:fillCircle="true"
        app:cornerRadiusX="5dp"
        app:cornerRadiusY="5dp"
        android:layout_centerInParent="true" />

    <in.arunkrishnamurthy.twowayslider.TwowaySliderView
        android:id="@+id/sliderControlCostomized"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        app:sliderColor="@color/colorAccent"
        app:sliderBackgroundColor="@android:color/holo_blue_bright"
        app:sliderImage="@mipmap/ic_launcher"
        app:leftImage="@mipmap/ic_launcher"
        app:rightImage="@mipmap/ic_launcher"
        app:cornerRadiusX="15dp"
        app:cornerRadiusY="15dp"
        android:layout_below="@+id/sliderControl" />
</RelativeLayout>
